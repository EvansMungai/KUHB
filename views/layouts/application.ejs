<%- include ('../partials/header.ejs'); -%>
<%- include ('../partials/studentSidebar.ejs'); -%>
<%- include ('../partials/navbar.ejs'); -%>
<div class="container">
  <h3>INTERNAL HOSTEL APPLICATION FORM</h3>
  <div class="form">
    <form class="" action="/student/application" method="post">
      <div class="mb-3">
      <label for="RegistrationNo" class="form-label"
          >Registration Number:</label
        >
        <input type="text" name="RegNo" class="form-control" id="RegistrationNo" required/>
      </div>
      <div class="mb-3">
        <label for="hostel-name" class="form-label">Hostel Name:</label>
        <select id="hostel-name" name="hostelName" size="1" class="form-select">
          <option value="" selected disabled>(select one)</option>
          <% if (sampleData.length > 0){ %>
            <% sampleData.forEach((data)=>{ %>
              <option value="<%= data.HostelName %>" class="row"><%= data.HostelNo %>.   <%= data.HostelName %></option>
              <% }) %>
          <% } else { %>
          <option value="Batian">Batian</option>
          <option value="Serengeti">Serengeti</option>
          <option value="Mt Kenya">Mt Kenya</option>
          <option value="Simba">Simba</option>
          <% } %>
        </select>
      </div>
      
      <div class="row">
        <div class="col">
          <label for="ApplicationPeriod" class="form-label">Application Period:</label>
          <input type="number" name="ApplicationPeriod" class="form-control" id="ApplicationPeriod" required/>
        </div>
      </div>
      <div class="mb-3">
        <label for="Disability" class="form-label"
          >Do you live with any disability?</label
        >
        <label for="yes"class="form-label">YES</label>
        <input
          class="form-check-input position-static"
          type="checkbox"
          name="isDisabled"
          id="Disability"
          value="YES"
        />
        <label for="no" class="form-label">NO</label>
        <input
          class="form-check-input position-static"
          type="checkbox"
          name="isDisabled"
          id="Disability"
          value="NO"
        />
        <label for="DisabilityDetails"></label>
        <input type="text" name="DisabilityDetails" class="form-control" id="DisabilityDetails" placeholder="(If yes specify the disability)" />
      </div><br>
      <h4>SECTION II:NEEDS ASSESSMENT(Attach evidence where needed)</h4>
      <div class="mb-3">
        <label for="AccomodatedBefore" class="form-label"
          >Have you ever been accomodated within the university?</label
        >
        <label for="yes" class="form-label">YES</label>
        <input
          class="form-check-input position-static"
          type="checkbox"
          name="accommodationBefore"
          id="AccomodatedBefore"
          value="YES"
        />
        <label for="no" class="form-label">NO</label>
        <input
          class="form-check-input position-static"
          type="checkbox"
          name="accommodationBefore"
          id="AccomodatedBefore"
          value="NO"
        />

        <label for="AccomodationPeriod">(If yes specify the period)</label
        ><input type="number" name="AccommodationPeriod" class="form-control" id="AccomodationPeriod" placeholder="Specify" />

        <label for="IsSponsored" class="form-label"
          >Are you sponsored by an organization recognized by the University
          and sponsorship includes accommodation?</label>
        <label for="yes"class="form-label">YES</label>
        <input
          class="form-check-input position-static"
          type="checkbox"
          name="IsSponsored"
          id="Disability"
          value="YES"
        />
        <label for="no" class="form-label">NO</label>
        <input
          class="form-check-input position-static"
          type="checkbox"
          name="IsSponsored"
          id="Disability"
          value="NO"
        />

        <label for="sponsor">(If yes, provide the name of the sponsor)</label>
        <input type="text" name="sponsor" class="form-control"  id="Sponsor" placeholder="(Please provide the name of the sponsor)" />

        <label for="ReceivesHelb" class="form-label"
          >Do you receive HELB?
        </label>
        <label for="yes" class="form-label">YES</label>
        <input
          class="form-check-input position-static"
          type="checkbox"
          name="ReceivesHelb"
          id="ReceivesHelb"
          value="YES"
        />
        <label for="no" class="form-label">NO</label>
        <input
          class="form-check-input position-static"
          type="checkbox"
          name="ReceivesHelb"
          id="ReceivesHelb"
          value="NO"
        />

        <label for="HelbAmount">(If yes, how much per year)</label
        ><input
          type="number"
          class="form-control"
          name="HelbAmount"
          id="HelbAmount"
          placeholder="Helb Allocation per year …"
        />
        <label for="ReceivedBursary" class="form-label"
          >Have you ever benefited from DeKUT bursary before?
        </label>
        <label for="yes" class="form-label">YES</label>
        <input
          class="form-check-input position-static"
          type="checkbox"
          name="ReceivedBursary"
          id="bursary"
          value="YES"
        />
        <label for="no" class="form-label">NO</label>
        <input
          class="form-check-input position-static"
          type="checkbox"
          name="ReceivedBursary"
          id="bursary"
          value="NO"
        />

        <label for="BursaryAmount">(If yes, how much per year)</label
        ><input
          type="text"
          class="form-control"
          name="BursaryAmount"
          id="BursaryAmount"
          placeholder="Amount Awarded"
        />

        <label for="WorkStudyBenefitsBefore" class="form-label"
          >Have you ever benefited from Work-study program before?
        </label>
        <label for="yes" class="form-label">YES</label>
        <input
          class="form-check-input position-static"
          type="checkbox"
          name="WorkStudyBenefitsBefore"
          id="Work-study"
          value="YES"
        />
        <label for="no" class="form-label">NO</label>
        <input
          class="form-check-input position-static"
          type="checkbox"
          name="WorkStudyBenefitsBefore"
          id="Work-study"
          value="NO"
        />

        <label for="WorkStudyPeriod">(If yes, specify the period)</label
        ><input
          type="number"
          class="form-control"
          name="WorkStudyPeriod"
          id="WorkStudyPeriod"
          placeholder="specify the period"
        />

        <label for="SpecialExamsOnFinancialGrounds" class="form-label"
          >Have you ever deferred of studies on financial grounds?
        </label>
        <label for="yes" class="form-label">YES</label>
        <input
          class="form-check-input position-static"
          type="checkbox"
          name="deferred"
          id="deferred"
          value="YES"
        />
        <label for="no" class="form-label">NO</label>
        <input
          class="form-check-input position-static"
          type="checkbox"
          name="deferred"
          id="deferred"
          value="NO"
        />

        <label for="SpecialExamPeriod">(If yes, specify the period)</label
        ><input
          type="number"
          class="form-control"
          name="SpecialExamPeriod"
          id="SpecialExamPeriod"
          placeholder="If yes, state the period: …"
        />
        
        <label for="ReasonsForConsideration" class="form-label"
          >Briefly describe why you should be considered for a space within
          the University hostels?
        </label>
        <textarea type="text" name="ReasonsForConsideration" class="form-control" id="ReasonsForConsideration" required ></textarea><br>

        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </div>
</div>
  <%- include ('../partials/footer.ejs'); -%>